<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"

    android:padding="2dp">

    <ImageView
        android:id="@+id/feeling"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="49dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_fb_love" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:background="@drawable/senderchatdrawable"
        android:id="@+id/layoutformessage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender message is here"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingLeft="7dp"

            android:paddingRight="50dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:id="@+id/sendermessage">

        </TextView>

        <TextView
            android:id="@+id/timeofmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/sendermessage"
            android:layout_marginLeft="-40dp"
            android:layout_alignBottom="@id/sendermessage"
            android:text="20:09"
            android:padding="7dp"
            android:textColor="@color/black">

        </TextView>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/iv_sender"

            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>